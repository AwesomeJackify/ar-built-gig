---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

import project1Img from "../../assets/images/project1.png";
import project2Img from "../../assets/images/project2.png";
import project3Img from "../../assets/images/project3.png";

const projects = [
  {
    name: "Curved Deck",
    image: project2Img,
    url: "/projects/curved-deck",
  },
  {
    name: "Bathroom Renovation",
    image: project3Img,
    url: "/projects/bathroom-renovation",
  },
  {
    name: "Project 1",
    image: project1Img,
    url: "/projects/project-1",
  },
];
---

<Layout title="Projects">
  <section class="bg-secondary">
    <div class="max-w-screen-lg mx-auto flex flex-col gap-16">
      <h1
        class="text-8xl max-md:text-7xl max-md:text-center font-extrabold pt-16 max-md:pt-8"
      >
        Our projects
      </h1>
      <div class="grid grid-cols-2 max-md:grid-cols-1">
        {
          projects.map((project) => (
            <a href={project.url} class="flex flex-col gap-4 relative group">
              <Image
                src={project.image}
                alt={project.name}
                class="w-full h-full aspect-square object-cover group-hover:grayscale-[0%] grayscale-[100%] transition max-md:grayscale-[50%]"
              />
              <h1 class="group-hover:opacity-100 opacity-0 transition absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-primary text-white p-4 text-4xl font-bold text-center max-md:opacity-100">
                {project.name}
              </h1>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
